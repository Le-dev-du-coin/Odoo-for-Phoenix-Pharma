<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="reclamation_view_template" name="Vos reclamation">
        <t t-call="website.layout">
            <div class="container">
                <h1 class=" text-center text-primary my-3">Vos reclamations</h1>

                <table class="table table-responsive table-secondary-striped">
                    <thead>
                        <th>Reference</th>
                        <th>Date de creation</th>
                        <th>N Facture</th>
                        <th>Statut</th>
                        <th>Date cloture</th>
                    </thead>
                    <tbody>
                        <t t-foreach="claim" t-as="reclamation">
                            <tr>
                                <td>

                                </td>
                                <td>
                                    <t t-esc="reclamation.open_date"/>
                                </td>
                                <td>
                                     <t t-esc="reclamation.invoice_number"/>
                                </td>
                                <td>
                                    <t t-if="reclamation.state == 'draft'">
                                        <span class="text-warning">En attente</span>
                                    </t>
                                     <t t-elif="reclamation.state == 'open'">
                                        <span class="text-success">Traitement en cours</span>
                                    </t>
                                    <t t-elif="reclamation.state == 'closed'">
                                        <span class="text-danger">Cloturee</span>
                                    </t>
                                </td>
                                <td>
                                    <t t-esc="reclamation.closure_date"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>