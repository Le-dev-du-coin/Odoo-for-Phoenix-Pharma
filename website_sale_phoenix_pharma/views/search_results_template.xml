<odoo>
    <template id="search_results_template" name="Résultats de la recherche">
        <t t-call="website.layout">
            <div class="container">
                <h1 class="text-center text-primary my-3">Résultats de la recherche pour "<t t-esc="search_term"/>"</h1>

                <div class="shadow p-3 mb-5 bg-body rounded-3">
                    <table class="mt-3 mb-5 table table-responsive table-striped table-sm js_cart_lines">
                        <thead class="fs-5 text">
                            <th>Libellé</th>
                            <th>Prix</th>
                            <th></th>
                        </thead>
                        <tbody>
                            <t t-if="products">
                                <t t-foreach="products" t-as="product">
                                    <tr>
                                        <td><t t-esc="product.name"/></td>
                                        <td>
                                            <strong class="text-dark">
                                                <t t-esc="product.list_price"
                                                   t-options="{'widget': 'monetary', 'display_currency': product.currency_id}"/>
                                            </strong>
                                        </td>
                                        <td>
                                            <a t-att-href="'/shop/product/' + str(product.id)" class="btn btn-primary">Voir</a>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="not products">
                                <tr>
                                    <td colspan="3" class="text-center">Aucun produit trouvé</td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <t t-call="website.pager"/>
                </div>
            </div>
        </t>
    </template>
</odoo>
